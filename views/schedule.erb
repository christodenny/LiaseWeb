<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SOAA | Schedule</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="shortcut icon" href="favicon.png" type="image/x-icon">
    <link rel="icon" href="favicon.png" type="image/x-icon">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.css">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link rel="stylesheet" href="/dist/css/skins/skin-black.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<!--
  BODY TAG OPTIONS:
  =================
  Apply one or more of the following classes to get the
  desired effect
  |---------------------------------------------------------|
  | SKINS         | skin-blue                               |
  |               | skin-black                              |
  |               | skin-purple                             |
  |               | skin-yellow                             |
  |               | skin-red                                |
  |               | skin-green                              |
  |---------------------------------------------------------|
  |LAYOUT OPTIONS | fixed                                   |
  |               | layout-boxed                            |
  |               | layout-top-nav                          |
  |               | sidebar-collapse                        |
  |               | sidebar-mini                            |
  |---------------------------------------------------------|
  -->

<body class="skin-black sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <div id="logo-div" class="logo">
                <a href="schedule.html">
                </a>
            </div>

            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a id="sidebar-btn" href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button" >
                    <span class="sr-only">Toggle navigation</span>
                </a>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <li class="header">Menu</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li class="active"><a href="schedule"><i class="fa fa-calendar"></i> <span>Schedule</span></a>
                    </li>
                    <li><a href="teamscontacts"><i class="fa fa-group"></i> <span>Teams</span></a>
                    </li>
                    <li><a href="message"><i class="fa fa-envelope-o"></i> <span>Quick Message</span></a>
                    </li>
                    <li><a href="addEvent"><i class="fa fa-plus-square"></i> <span>Add Events</span></a>
                    </li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 559px;">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
            Schedule of Events
            <small>Optional description</small>
          </h1>
                
            </section>

            
            <!-- Main content -->
            <section class="content">
                <div class="container panel-group col-md-9">

                    <% @events.each do |event| %>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h4 class="panel-title"><%=event.start_time%> - <%=event.end_time%></h4>
                                    </div>
                                    <div class="col-md-6">
                                        <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#<%=event.id%>"><%=event.name%></a>
                                    </h4>
                                    </div>
                                </div>
                            </div>
                            <div id="<%=event.id%>" class="panel-collapse collapse">
                                <div class="row">
                                    <div class="col-md-offset-3">
                                        <div class="panel-body"><b><%=event.place%></b>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-3">
                                        <div class="panel-body">Clements High School</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-3">
                                        <div class="panel-body">Seven Lakes</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-3">
                                        <div class="panel-body">LASA</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </section>
        </div>
        <!-- /.content-wrapper -->

        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">

            </div>
            <!-- Default to the left -->
            <strong>Copyright Â© 2015 <a href="http://atxscioly.com/">Science Olympiad Alumni Association</a>.</strong> All rights reserved.
        </footer>


    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED JS SCRIPTS -->

    <!-- jQuery 2.1.4 -->
    <script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/app.min.js"></script>

    <!-- Optionally, you can add Slimscroll and FastClick plugins.
         Both of these plugins are recommended to enhance the
         user experience. Slimscroll is required when using the
         fixed layout. -->

    <script type="text/javascript">
        $("#sidebar-btn").click(function() {
            if (!$("body").hasClass("sidebar-collapse")){
                $("#logo-div").css("background-image", "url('favicon.png')");
            } else {
                $("#logo-div").css("background-image", "url('logo.png')");
            }
        });
    </script>
</body>
</html>
