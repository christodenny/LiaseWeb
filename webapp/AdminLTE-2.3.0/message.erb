        <!-- Main content -->
        <section class = "content">
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <div class="well well-sm">
                            <form class="form-horizontal" method="post">
                                <fieldset>
                                    <legend class="text-center header">Quick Message</legend>

                                    <div class="form-group">
                                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                        <div class="col-md-8">
                                            <input id="fname" name="name" type="text" placeholder="Recipients" class="form-control">
                                        </div>
                                    </div>
                                    

